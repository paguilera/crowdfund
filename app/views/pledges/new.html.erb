<header id="content-header">
  <h1>Create a New Project</h1>
</header>

<%= render "shared/errors", object: @pledge %>

<%= form_for([@project, @pledge]) do |f| %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>         
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :email %>
        <%= f.text_area :email %>
      </li>
      <li class="required amount">
        <%= f.label :pledge_amount %>  
        <%= f.select :pledge_amount, Pledge::AMOUNT_LEVELS, prompt: "Pick one" %>      
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <%= f.submit 'Create Pledge' %> 
      <%= link_to "Cancel", @project, class: 'button' %>
    </p>
  </fieldset>
<% end %>
